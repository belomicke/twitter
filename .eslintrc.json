{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "extends": [
        "plugin:vue/vue3-recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "parser": "@typescript-eslint/parser"
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "never"],
        "vue/html-indent": ["error", 4, {
            "attribute": 1,
            "alignAttributesVertically": true
        }]
    }
}
